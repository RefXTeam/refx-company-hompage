---
const navigation = [
  { name: '회사소개', href: '/about' },
  { name: '개발서비스', href: '/services' },
  { name: '포트폴리오', href: '/portfolio' },
  { name: '연락처', href: '/contact' },
];

const currentPath = Astro.url.pathname;
---

<!-- Sticky Header -->
<header class="bg-white dark:bg-slate-900 border-b border-gray-100 dark:border-slate-800 sticky top-0 z-40 transition-colors duration-300">
  <nav class="max-w-8xl mx-auto px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">

      <!-- Logo -->
      <a href="/" class="flex items-center gap-1.5 group">
        <span class="font-display text-xl font-black text-gray-900 dark:text-white tracking-tight group-hover:text-blue-700 dark:group-hover:text-blue-400 transition-colors">
          Ref<span class="text-terra">X</span>
        </span>
        <span class="text-base">☕</span>
      </a>

      <!-- Desktop Nav -->
      <div class="hidden md:flex items-center gap-1">
        {navigation.map((item) => (
          <a
            href={item.href}
            class={`px-3 py-2 rounded-md text-sm font-medium font-display transition-colors duration-200 ${
              currentPath === item.href
                ? 'text-blue-700 dark:text-blue-400 bg-blue-50 dark:bg-blue-950'
                : 'text-gray-600 dark:text-slate-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-50 dark:hover:bg-slate-800'
            }`}
          >
            {item.name}
          </a>
        ))}
      </div>

      <!-- Desktop Right: L/D toggle + CTA -->
      <div class="hidden md:flex items-center gap-3">
        <button
          id="theme-toggle"
          type="button"
          class="w-9 h-9 rounded-md bg-gray-100 dark:bg-slate-800 flex items-center justify-center text-sm font-display font-bold text-gray-700 dark:text-slate-200 hover:bg-gray-200 dark:hover:bg-slate-700 transition-colors select-none"
          aria-label="테마 전환"
        >
          <span class="dark:hidden">L</span>
          <span class="hidden dark:block">D</span>
        </button>
        <a href="/contact" class="px-4 py-2 bg-terra text-white text-sm font-display font-bold rounded-btn hover:bg-terra-hover transition-colors">
          문의하기
        </a>
      </div>

      <!-- Mobile Right: L/D toggle + hamburger -->
      <div class="md:hidden flex items-center gap-2">
        <button
          id="theme-toggle-mobile"
          type="button"
          class="w-8 h-8 rounded-md bg-gray-100 dark:bg-slate-800 flex items-center justify-center text-xs font-display font-bold text-gray-700 dark:text-slate-200 hover:bg-gray-200 dark:hover:bg-slate-700 transition-colors select-none"
          aria-label="테마 전환"
        >
          <span class="dark:hidden">L</span>
          <span class="hidden dark:block">D</span>
        </button>
        <button
          id="hamburger-btn"
          type="button"
          class="p-2 rounded-md text-gray-600 dark:text-slate-300 hover:bg-gray-100 dark:hover:bg-slate-800 transition-colors"
          aria-label="메뉴 열기"
          aria-expanded="false"
          aria-controls="mobile-nav"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

    </div>
  </nav>
</header>

<!-- ── Mobile Nav Overlay (full-screen slide-in) ─────────────────────── -->
<div
  id="mobile-nav"
  class="fixed inset-0 z-50 flex flex-col bg-white dark:bg-slate-950
         translate-x-full transition-transform duration-300 ease-in-out"
  aria-hidden="true"
  role="dialog"
  aria-label="모바일 내비게이션"
>
  <!-- Terra top accent line -->
  <div class="h-[3px] bg-terra w-full shrink-0"></div>

  <!-- Nav Header (logo + close btn) -->
  <div class="flex justify-between items-center px-5 h-[60px] shrink-0 border-b border-gray-100 dark:border-slate-800">
    <a
      href="/"
      id="mobile-nav-logo"
      class="font-display text-xl font-black text-gray-900 dark:text-white tracking-tight"
    >
      Ref<span class="text-terra">X</span>&nbsp;☕
    </a>
    <button
      id="mobile-nav-close"
      type="button"
      class="w-8 h-8 rounded-md bg-gray-100 dark:bg-slate-800 flex items-center justify-center text-gray-600 dark:text-slate-300 hover:bg-gray-200 dark:hover:bg-slate-700 transition-colors"
      aria-label="메뉴 닫기"
    >
      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>

  <!-- Nav Links -->
  <nav class="flex-1 overflow-y-auto px-5 pt-1">
    {navigation.map((item) => {
      const isActive = currentPath === item.href;
      return (
        <a
          href={item.href}
          class={`mobile-nav-link flex items-center justify-between py-[18px] border-b border-gray-100 dark:border-slate-800 group`}
        >
          <div class="flex items-center gap-3">
            <span class={`w-[3px] h-6 rounded-full shrink-0 transition-colors ${
              isActive ? 'bg-terra' : 'bg-transparent'
            }`}></span>
            <span class={`font-display font-bold text-2xl transition-colors ${
              isActive
                ? 'text-terra'
                : 'text-gray-900 dark:text-white group-hover:text-terra'
            }`}>
              {item.name}
            </span>
          </div>
          <span class={`text-base font-bold transition-colors ${
            isActive
              ? 'text-terra'
              : 'text-gray-400 dark:text-slate-500 group-hover:text-terra'
          }`}>→</span>
        </a>
      );
    })}
  </nav>

  <!-- Bottom Contact Info -->
  <div class="px-5 py-5 border-t border-gray-100 dark:border-slate-800 shrink-0">
    <p class="font-display text-label text-terra tracking-widest uppercase mb-3">연락처</p>
    <p class="text-sm text-gray-500 dark:text-slate-400 font-sans mb-1">contact@refx.kr</p>
    <p class="text-sm text-gray-500 dark:text-slate-400 font-sans mb-4">070-4145-8080</p>
    <div class="h-px bg-gray-100 dark:bg-slate-800 mb-3"></div>
    <p class="text-xs text-gray-400 dark:text-slate-600 font-sans">© 2025 RefX (레퍼런스엑스)</p>
  </div>
</div>

<script>
  // ── Dark Mode Toggle ────────────────────────────────────────────────────
  // Toggle between light/dark, persist to localStorage
  function toggleTheme() {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  }

  document.getElementById('theme-toggle')?.addEventListener('click', toggleTheme);
  document.getElementById('theme-toggle-mobile')?.addEventListener('click', toggleTheme);

  // ── Mobile Nav ─────────────────────────────────────────────────────────
  const mobileNav = document.getElementById('mobile-nav');
  const hamburgerBtn = document.getElementById('hamburger-btn');
  const closeNavBtn = document.getElementById('mobile-nav-close');

  function openNav() {
    mobileNav?.classList.remove('translate-x-full');
    mobileNav?.setAttribute('aria-hidden', 'false');
    hamburgerBtn?.setAttribute('aria-expanded', 'true');
    document.body.style.overflow = 'hidden'; // lock background scroll
  }

  function closeNav() {
    mobileNav?.classList.add('translate-x-full');
    mobileNav?.setAttribute('aria-hidden', 'true');
    hamburgerBtn?.setAttribute('aria-expanded', 'false');
    document.body.style.overflow = ''; // restore scroll
  }

  hamburgerBtn?.addEventListener('click', openNav);
  closeNavBtn?.addEventListener('click', closeNav);

  // Close on nav link click (same-page links etc.)
  document.querySelectorAll('.mobile-nav-link').forEach((link) => {
    link.addEventListener('click', closeNav);
  });

  // Close on logo click inside nav
  document.getElementById('mobile-nav-logo')?.addEventListener('click', closeNav);

  // Close on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeNav();
  });
</script>