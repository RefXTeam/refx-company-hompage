---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="연락처 - RefX" description="프로젝트 문의, 기술 상담, 커피 주문 — 언제든 연락주세요.">
  <Header />
  <main>
    <!-- Hero: Terra Accent -->
    <section class="py-20 bg-white dark:bg-slate-900 border-b border-gray-100 dark:border-slate-800">
      <div class="max-w-8xl mx-auto px-6 lg:px-8">
        <div class="max-w-2xl">
          <span class="font-display text-label text-terra tracking-widest uppercase block mb-4">Contact</span>
          <h1 class="font-display font-black text-5xl md:text-6xl leading-tight text-gray-900 dark:text-white mb-4">
            함께<br><span class="text-terra">시작해</span><br>봅시다
          </h1>
          <p class="text-gray-600 dark:text-slate-300 text-lg leading-relaxed">
            프로젝트 문의, 기술 상담, 커피 주문까지 — 언제든 연락주세요.
          </p>
        </div>
      </div>
    </section>

    <!-- Form + Info -->
    <section class="py-16 bg-white dark:bg-slate-900">
      <div class="max-w-8xl mx-auto px-6 lg:px-8">
        <div class="grid lg:grid-cols-5 gap-12">

          <!-- Contact Form: 3 cols -->
          <div class="lg:col-span-3">
            <h2 class="font-display font-bold text-2xl text-gray-900 dark:text-white mb-6">문의하기</h2>
            <form action="https://formspree.io/f/mpwzgkba" method="POST" class="space-y-5">
              <div class="grid sm:grid-cols-2 gap-5">
                <div>
                  <label class="block text-sm font-display font-bold text-gray-700 dark:text-slate-300 mb-1.5">이름 *</label>
                  <input type="text" name="name" required placeholder="홍길동"
                    class="w-full px-4 py-3 rounded-btn border border-gray-200 dark:border-slate-600 bg-white dark:bg-slate-800 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-700 dark:focus:ring-blue-400 text-sm transition-colors" />
                </div>
                <div>
                  <label class="block text-sm font-display font-bold text-gray-700 dark:text-slate-300 mb-1.5">이메일 *</label>
                  <input type="email" name="email" required placeholder="hello@example.com"
                    class="w-full px-4 py-3 rounded-btn border border-gray-200 dark:border-slate-600 bg-white dark:bg-slate-800 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-700 dark:focus:ring-blue-400 text-sm transition-colors" />
                </div>
              </div>

              <div>
                <label class="block text-sm font-display font-bold text-gray-700 dark:text-slate-300 mb-1.5">문의 유형</label>
                <select name="type"
                  class="w-full px-4 py-3 rounded-btn border border-gray-200 dark:border-slate-600 bg-white dark:bg-slate-800 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-700 dark:focus:ring-blue-400 text-sm transition-colors">
                  <option value="개발 프로젝트">개발 프로젝트 문의</option>
                  <option value="기술 컨설팅">기술 컨설팅</option>
                  <option value="AI 자동화">AI 개발 자동화</option>
                  <option value="커피 문의">레퍼런스커피 문의</option>
                  <option value="기타">기타</option>
                </select>
              </div>

              <div>
                <label class="block text-sm font-display font-bold text-gray-700 dark:text-slate-300 mb-1.5">제목</label>
                <input type="text" name="subject" placeholder="문의 제목을 입력해 주세요"
                  class="w-full px-4 py-3 rounded-btn border border-gray-200 dark:border-slate-600 bg-white dark:bg-slate-800 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-700 dark:focus:ring-blue-400 text-sm transition-colors" />
              </div>

              <div>
                <label class="block text-sm font-display font-bold text-gray-700 dark:text-slate-300 mb-1.5">내용 *</label>
                <textarea name="message" required rows="6"
                  placeholder="프로젝트 개요, 기술 스택, 일정, 예산 등을 자유롭게 작성해 주세요."
                  class="w-full px-4 py-3 rounded-btn border border-gray-200 dark:border-slate-600 bg-white dark:bg-slate-800 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-700 dark:focus:ring-blue-400 text-sm transition-colors resize-none"></textarea>
              </div>

              <button type="submit"
                class="w-full py-3.5 bg-terra text-white font-display font-bold rounded-btn hover:bg-terra-hover transition-colors">
                문의 보내기
              </button>
            </form>
          </div>

          <!-- Contact Info: 2 cols -->
          <div class="lg:col-span-2 space-y-6">
            <div>
              <h2 class="font-display font-bold text-2xl text-gray-900 dark:text-white mb-6">연락처 정보</h2>
              <div class="space-y-5">
                {[
                  {
                    icon: 'M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
                    label: '이메일',
                    value: 'contact@refx.kr',
                    href: 'mailto:contact@refx.kr',
                  },
                  {
                    icon: 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z',
                    label: '전화',
                    value: '070-4145-8080',
                    href: null,
                  },
                  {
                    icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z',
                    label: '응답 시간',
                    value: '영업일 기준 24시간 내 답변',
                    href: null,
                  },
                ].map(info => (
                  <div class="flex items-start gap-4">
                    <div class="w-10 h-10 bg-blue-50 dark:bg-slate-800 rounded-lg flex items-center justify-center shrink-0">
                      <svg class="w-5 h-5 text-blue-700 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d={info.icon} />
                      </svg>
                    </div>
                    <div>
                      <p class="font-display font-bold text-sm text-gray-900 dark:text-white mb-0.5">{info.label}</p>
                      {info.href
                        ? <a href={info.href} class="text-gray-600 dark:text-slate-400 text-sm hover:text-blue-700 dark:hover:text-blue-400 transition-colors">{info.value}</a>
                        : <p class="text-gray-600 dark:text-slate-400 text-sm">{info.value}</p>
                      }
                    </div>
                  </div>
                ))}
              </div>
            </div>

            <!-- Coffee order card -->
            <div class="bg-gray-50 dark:bg-slate-800 rounded-card p-6 border border-gray-100 dark:border-slate-700">
              <h3 class="font-display font-bold text-base text-gray-900 dark:text-white mb-2">레퍼런스커피 주문</h3>
              <p class="text-gray-600 dark:text-slate-400 text-sm leading-relaxed mb-4">
                커피는 네이버 스마트스토어에서 바로 주문 가능합니다.
              </p>
              <a href="https://smartstore.naver.com/refcoffee" target="_blank" rel="noopener noreferrer"
                class="block text-center py-2.5 bg-coffee-700 text-white font-display font-bold rounded-btn text-sm hover:bg-coffee-900 transition-colors">
                스마트스토어 ☕
              </a>
            </div>

            <!-- Tech stack mini terminal -->
            <div class="bg-slate-900 dark:bg-slate-950 rounded-card p-5">
              <p class="font-mono text-xs text-slate-500 mb-3">// 주요 기술 스택</p>
              <div class="space-y-1.5 font-mono text-sm">
                <p><span class="text-blue-400">Spring Boot</span> <span class="text-slate-400">4.x.x</span></p>
                <p><span class="text-blue-400">Java</span> <span class="text-slate-400">25 LTS</span></p>
                <p><span class="text-green-400">Claude Code</span> <span class="text-slate-400">AI</span></p>
                <p><span class="text-green-400">MCP</span> <span class="text-slate-400">Protocol</span></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>
