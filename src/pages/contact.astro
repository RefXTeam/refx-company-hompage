---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="연락처 - RefX" description="레퍼런스엑스에 프로젝트 문의나 커피 주문 관련 문의를 남겨주세요.">
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-gray-900 to-gray-700 text-white py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">연락처</h1>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto">
            프로젝트 문의부터 커피 주문까지, 언제든 연락주세요
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Information -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-8">문의하기</h2>
            <form class="space-y-6" action="https://formspree.io/f/contact" method="POST">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">이름</label>
                <input type="text" id="name" name="name" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-refx-primary focus:border-transparent" placeholder="홍길동">
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">이메일</label>
                <input type="email" id="email" name="email" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-refx-primary focus:border-transparent" placeholder="hong@example.com">
              </div>

              <div>
                <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">문의 유형</label>
                <select id="subject" name="subject" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-refx-primary focus:border-transparent">
                  <option value="">선택해주세요</option>
                  <option value="개발 프로젝트 문의">개발 프로젝트 문의</option>
                  <option value="기술 상담">기술 상담</option>
                  <option value="커피 주문 문의">커피 주문 문의</option>
                  <option value="파트너십 문의">파트너십 문의</option>
                  <option value="기타 문의">기타 문의</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">메시지</label>
                <textarea id="message" name="message" rows="5" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-refx-primary focus:border-transparent" placeholder="문의 내용을 자세히 적어주세요..."></textarea>
              </div>

              <button type="submit" class="w-full bg-refx-primary text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
                문의 보내기
              </button>
            </form>
          </div>

          <!-- Contact Info -->
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-8">연락 정보</h2>
            
            <div class="space-y-8">
              <!-- Email -->
              <div class="flex items-start">
                <div class="w-12 h-12 bg-refx-primary rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-1">이메일</h3>
                  <p class="text-gray-600">contact@refx.kr</p>
                  <p class="text-sm text-gray-500">24시간 내 답변 드립니다</p>
                </div>
              </div>

              <!-- Business Hours -->
              <div class="flex items-start">
                <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-1">업무 시간</h3>
                  <p class="text-gray-600">평일 09:00 - 18:00</p>
                  <p class="text-sm text-gray-500">주말 및 공휴일 휴무</p>
                </div>
              </div>

              <!-- Response Time -->
              <div class="flex items-start">
                <div class="w-12 h-12 bg-coffee-600 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-1">응답 시간</h3>
                  <p class="text-gray-600">평균 2시간 내 답변</p>
                  <p class="text-sm text-gray-500">긴급 문의는 우선 처리</p>
                </div>
              </div>
            </div>

            <!-- Social Links -->
            <div class="mt-12">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">소셜 미디어</h3>
              <div class="flex space-x-4">
                <a href="https://github.com/RefXTeam" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-gray-900 rounded-lg flex items-center justify-center text-white hover:bg-gray-700 transition-colors">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
                <a href="https://instagram.com/refx.coffee" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg flex items-center justify-center text-white hover:from-purple-700 hover:to-pink-600 transition-colors">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987s11.987-5.367 11.987-11.987C24.004 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C3.85 14.82 3.85 13.1 5.126 11.824c1.275-1.275 2.995-1.275 4.271 0 1.275 1.275 1.275 2.995 0 4.27-.875.807-2.026 1.297-3.323 1.297zm7.138 0c-1.297 0-2.448-.49-3.323-1.297-1.275-1.275-1.275-2.995 0-4.27 1.275-1.275 2.995-1.275 4.271 0 1.275 1.275 1.275 2.995 0 4.27-.875.807-2.026 1.297-3.323 1.297z"/>
                  </svg>
                </a>
                <a href="https://www.linkedin.com/in/kwangmyung-choi-2792aa24/" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center text-white hover:bg-blue-700 transition-colors">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Links -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">빠른 연결</h2>
          <p class="text-xl text-gray-600">목적에 맞는 연결 방법을 선택하세요</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Project Inquiry -->
          <div class="bg-white rounded-xl shadow-lg p-6 text-center hover:shadow-xl transition-shadow">
            <div class="w-16 h-16 bg-refx-primary rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">개발 프로젝트 문의</h3>
            <p class="text-gray-600 mb-4">백엔드 개발, 시스템 구축, 기술 상담</p>
            <a href="mailto:contact@refx.kr?subject=개발 프로젝트 문의" class="text-refx-primary font-semibold hover:underline">
              바로 문의하기 →
            </a>
          </div>

          <!-- Coffee Order -->
          <div class="bg-white rounded-xl shadow-lg p-6 text-center hover:shadow-xl transition-shadow">
            <div class="w-16 h-16 bg-coffee-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white text-2xl">☕</span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">커피 주문</h3>
            <p class="text-gray-600 mb-4">레퍼런스커피 주문 및 문의</p>
            <a href="https://smartstore.naver.com/refcoffee" target="_blank" rel="noopener noreferrer" class="text-coffee-600 font-semibold hover:underline">
              스마트스토어 방문 →
            </a>
          </div>

          <!-- Partnership -->
          <div class="bg-white rounded-xl shadow-lg p-6 text-center hover:shadow-xl transition-shadow">
            <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">파트너십</h3>
            <p class="text-gray-600 mb-4">비즈니스 협력 및 제휴 문의</p>
            <a href="mailto:contact@refx.kr?subject=파트너십 문의" class="text-green-500 font-semibold hover:underline">
              협력 문의하기 →
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>